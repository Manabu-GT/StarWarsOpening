<?xml version="1.0" encoding="utf-8"?>
<objectAnimator xmlns:android="http://schemas.android.com/apk/res/android"
    android:duration="6000"
    android:startOffset="1000"
    android:interpolator="@android:interpolator/decelerate_cubic">
    <!-- this seems to be supported after lollipop -->
    <propertyValuesHolder android:propertyName="alpha" android:valueType="floatType">
        <!-- fraction is supported after android M -->
        <keyframe android:fraction="0" android:value="0"/>
        <keyframe android:fraction=".2" android:value="1"/>
        <keyframe android:fraction=".9" android:value="1"/>
        <keyframe android:fraction="1" android:value="0"/>
    </propertyValuesHolder>
</objectAnimator>